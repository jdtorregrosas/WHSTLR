html
  include head
  body
    div.background
      include navBar
      div.main
        include header
        div.form
          h2 Configuration
          form#formCreateNotes(name="applyConfig",method="post",action="/applyConfig")
            div.form-item
              span Repository URL:
              input(type='text' name='baseURL' placeholder="http://your-repository.org/")
            div.form-item
              span Access Token:
              input(type='text' name='token' placeholder="3dzg38990nd89NzjhdbJrff")
            div.form-item.submit
              button.button#btnSubmit(onclick='loading()' type="submit") Apply
        br
      include footer

script.
  var loading = function() {
    swal({
      title: "Wait a moment, please!",
      text: "We are applying your configuration ",
      imageUrl: "public/assets/images/loading.png" 
    });
  }
